<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_layout">
    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginVertical="3dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_profile_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@color/colorAccent"
            android:layout_marginHorizontal="3dp"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            app:civ_border_color="#FFFFFF"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:id="@+id/message_user"
            android:text="@string/user_name"
            android:textStyle="normal|bold"
            android:layout_alignBottom="@id/message_profile_image"
            android:layout_toEndOf="@id/message_profile_image"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_text"
        android:layout_toEndOf="@id/message_text"
        android:layout_marginHorizontal="2dp"
        android:text="@string/time"
        android:id="@+id/message_time"
        />

        <TextView
            android:layout_below="@id/profile"
            android:layout_width="wrap_content"
            android:maxWidth="300sp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_rectangle"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textSize="18sp"
            android:id="@+id/message_text"
            android:text="@string/message_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />




</RelativeLayout>